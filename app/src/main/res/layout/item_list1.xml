<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvData3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Data3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvData4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Data4"
        app:layout_constraintStart_toEndOf="@+id/tvData3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvData6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvData4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvData5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Data5"
        app:layout_constraintEnd_toStartOf="@+id/tvData6"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <TextView
        android:id="@+id/tvData6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Data6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>